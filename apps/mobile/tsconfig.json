{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022"],
    "module": "ESNext",
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@lib/*": ["./lib/*"],
      "@store/*": ["./store/*"],
      "@types/*": ["./types/*"],
      "@xiaoyuanbao/shared-types": ["../../packages/shared-types/src"],
      "@xiaoyuanbao/shared-utils": ["../../packages/shared-utils/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "app.json"],
  "exclude": ["node_modules", ".expo", "dist", "babel.config.js", "metro.config.js"]
}
